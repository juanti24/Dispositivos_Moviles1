<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DispositivosMoviles" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DispositivosMoviles" parent="Base.Theme.DispositivosMoviles" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/fond_color_dm</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textTitle">
        <item name="android:textColor">@color/title_color_dm</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonsGeneral" parent="Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonCancel" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/low_gray</item>
    </style>

    <style name="ButtonOpciones" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/naranja</item>
    </style>



    <style name="textDatos">
        <item name="android:textColor">@color/text_buton_datos</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ButtonIngresar" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/text_buton_datos</item>
    </style>

    <style name="textTituloPedidos">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="textInfo">
        <item name="android:textColor">@color/text_pregunta</item>
    </style>

    <style name="ButtonRedes" parent="ButtonsGeneral">
        <item name="android:width">130dp</item>
    </style>

    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/text_buton_datos</item>
    </style>

</resources>