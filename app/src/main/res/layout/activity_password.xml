<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/low_gray"
    android:layout_height="match_parent"
    tools:context=".ui.activities.PasswordActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomarvel" />

    <TextView
        android:id="@+id/textView3"
        style="@style/ejPractico_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_sides"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="@dimen/margin_sides"
        android:gravity="center"
        android:text="Recuperar ContraseÃ±a"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_sides"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/margin_sides"

        android:gravity="center"
        android:text=""
        android:textColor="@color/low_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_sides"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/margin_sides"
        android:text="Correo"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/email"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/margin_side_inputs"
        android:layout_marginEnd="@dimen/margin_side_inputs"
        android:hint="   example@email.com"
        android:singleLine="true"
        android:textStyle="normal"
        android:textSize="14dp"
        android:textColorHint="@color/low_gray"
        android:background="@drawable/contorno1"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_recover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="@color/black"
        android:text="Enviar correo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <ImageView
        android:id="@+id/imageView_spide_mujer2"
        android:layout_width="199dp"
        android:layout_height="171dp"
        android:layout_marginTop="448dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spide_mujer2" />

</androidx.constraintlayout.widget.ConstraintLayout>