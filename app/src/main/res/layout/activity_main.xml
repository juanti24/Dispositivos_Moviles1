<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">


    <TextView
        android:id="@+id/nombreApp"
        style="@style/textTitle"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="180dp"
        android:gravity="left"
        android:longClickable="true"
        android:text="@string/nombre_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mensajeBienvenida"
        style="@style/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="4dp"
        android:text="@string/bienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreApp" />

    <TextView
        android:id="@+id/mensajeRedes"
        style="@style/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/mensaje_redes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIngreso" />

    <TextView
        android:id="@+id/mensaje_recuperar_contrasenia"
        style="@style/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/mensaje_olvido_contrasenia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginTwitter" />

    <TextView
        android:id="@+id/textCorreo"
        style="@style/etiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:text="Correo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensajeBienvenida" />

    <TextView
        android:id="@+id/labelContrasenia"
        style="@style/etiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="380dp"
        android:text="ContraseÃ±a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelRegistro"
        style="@style/etiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Registrese"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginFacebook" />

    <Button
        android:id="@+id/btnLoginFacebook"
        style="@style/ButtonFacebook"
        android:layout_width="@dimen/buttom_widht"
        android:layout_height="@dimen/buttom_alternate_height"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:drawableLeft="@drawable/facebook"
        android:text="Facebook"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensajeRedes"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnLoginTwitter"
        style="@style/ButtonTwitter"
        android:layout_width="@dimen/buttom_widht"
        android:layout_height="@dimen/buttom_alternate_height"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/twitter"
        android:text="Twitter"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensajeRedes"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btnIngreso"
        style="@style/ButtonIngreso"
        android:layout_width="300dp"
        android:layout_height="@dimen/buttom_height"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/ingreso_boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_edi" />

    <EditText
        android:id="@+id/name"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:hint="example@email.com"
        android:backgroundTint="@color/light_grey"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCorreo" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/tamanio"
        android:layout_marginRight="@dimen/tamanio"
        android:backgroundTint="@color/light_grey"
        android:hint="* * * * * * * * * * *"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelContrasenia" />


</androidx.constraintlayout.widget.ConstraintLayout>